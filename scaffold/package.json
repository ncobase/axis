  },
  "dependencies": {},
  "devDependencies": {
    "@ncobase/tailwind": "workspace:*",
    "@ncobase/tsconfig": "workspace:*",
    "@ncobase/utils": "workspace:*",
    "@types/node": "^22.7.6",
    "tsup": "^8.3.0"
  }
}
