{
  "extends": "@ncobase/tsconfig/base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2019",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "rootDir": "src",
    "baseUrl": "src",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
