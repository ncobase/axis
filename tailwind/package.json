    "./styles.css": "./styles.css"
  },
  "files": [
    "mjs",
    "cjs",
    "types",
    "styles.css"
  ],
  "peerDependencies": {
    "@tailwindcss/postcss": "^4.0.0",
    "postcss": "^8.5.0",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "cssnano": "^7.0.6",
    "tw-animate-css": "^1.2.9"
  }
}
