    "postcss-import": "catalog:",
    "postcss-nesting": "catalog:",
    "tailwindcss": "catalog:",
    "tailwindcss-animate": "catalog:"
  },
  "devDependencies": {
    "@types/postcss-import": "catalog:",
    "typescript": "catalog:"
  }
