{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nuxt",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "@nuxt/types",
      "@types/node"
    ],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
