{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Test",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "types": [
      "jest",
      "node"
    ],
    "sourceMap": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
