{
  "version": "0.1.0",
  "description": "Integrated management system",
  "repository": "git@github.com:haiyon/tone-front.git",
  "private": true,
  "workspaces": [
    "console",
    "packages/request",
    "packages/tailwind",
    "packages/tsconfig",
    "packages/types",
    "packages/ui",
    "packages/utils"
  ],
  "scripts": {
    "clean": "npx rimraf --glob '**/{node_modules,.next,dist}'",
    "dev:console": "yarn workspace @tone/console dev",
    "lint": "eslint . --ext .js,.jsx.ts,.tsx --cache",
    "lint:fix": "yarn lint --fix && yarn prettier --write",
    "prettier": "prettier \"**/*.{vue,js,jsx,ts,tsx,md,css,scss,yaml,yml}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "yarn lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
