{
  "name": "@ncobase/axis",
  "private": true,
  "description": "A comprehensive frontend toolkit built with modern web technologies",
  "repository": "git@github.com:ncobase/axis.git",
  "workspaces": [
    "charts",
    "flows",
    "react",
    "scaffold",
    "tailwind",
    "tsconfig",
    "types",
    "utils"
  ],
  "scripts": {
    "prepare": "husky",
    "clean": "npx rimraf --glob '**/{node_modules,.next,dist,.turbo,.eslintcache}'",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "pnpm lint -- --fix && pnpm prettier --write",
    "prettier": "prettier \"**/*.{vue,js,jsx,ts,tsx,md,css,scss,yaml,yml}\"",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "update:deps": "npx taze -r -w"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/compat": "^1.2.8",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.15.9",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
